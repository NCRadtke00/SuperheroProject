@model Superhero.Models.Superheros

@{
    ViewData["Title"] = "Details";
}

<h1>
    @Html.DisplayFor(model => model.Name)
</h1>

<div>
    <h4>Hero's information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Alterego
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alterego)
        </dd>
        <dt class="col-sm-2">
            Primary Ability
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrimaryAbility)
        </dd>
        <dt class="col-sm-2">
            Secondary Ability
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecondaryAbility)
        </dd>
        <dt class="col-sm-2">
            Catch phrase 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Catchphrase)
        </dd>
    </dl>
</div>
<div>
    <a class="text-primary" asp-action="Edit" asp-route-id="@Model.Id">
        Edit
    </a> |
    <a class="text-danger" asp-action="Delete" asp-route-id="@Model.Id">
        Delete
    </a> 
    <form asp-action="Index">
        <button type="submit" class="btn btn-primary">Back to List</button>
    </form>
</div>
